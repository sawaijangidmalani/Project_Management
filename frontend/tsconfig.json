{
      "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
          "*": ["node_modules/*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"]
      },
      "include": ["src"]
    }
    